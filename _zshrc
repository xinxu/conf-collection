# .zshrc

# environment
export SHELL=$(which zsh)
export _Z_CMD=j # z to j
export CLICOLOR=1
export ZSH=$HOME/.oh-my-zsh
export GOPATH=$HOME/go
export ANDROID_HOME=$HOME/Library/Android/sdk
export PATH=$PATH:$HOME/bin:/usr/local/opt/go/libexec/bin:$ANDROID_HOME/tools:$GOPATH/bin

# appearance
if [ "$TERM" = "xterm"  ]; then
	export TERM=xterm-256color
fi

# oh-my-zsh
ZSH_THEME=""
plugins=(osx z)
DISABLE_UPDATE_PROMPT=true
source $ZSH/oh-my-zsh.sh

# pure
autoload -U promptinit && promptinit
prompt pure

# alias
alias ow='mdfind "kMDItemFSName=*.xcworkspace" -onlyin . | xargs open'
alias op='mdfind "kMDItemFSName=*.xcodeproj" -onlyin . | xargs open'
alias oah='ssh root@116.251.219.113 -t zsh'
alias s='subl'
alias o='open'
alias v='mvim'
alias ks='tmux kill-session -t'
alias simu='open -n /Applications/Xcode.app/Contents/Developer/Applications/Simulator.app'
alias mp='man-preview'
alias gt='gittower .'
alias task='launchctl'
alias goproxy='export http_proxy=http://127.0.0.1:8848 https_proxy=http://127.0.0.1:8848'
alias disproxy='unset http_proxy https_proxy'
