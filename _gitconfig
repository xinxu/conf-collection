[color]
	ui = true
[push]
	default = simple
[user]
	name = tassar
	email = xinxu0x@gmail.com
[core]
	excludesfile = /Users/tassar/.gitignore_global
	compression = 1
[alias]
	st = status -sb
	cm = commit -m
	co = checkout
	di = diff
	rb = rebase
	append = commit --amend
	last = diff HEAD^ HEAD
	lol = log --no-merges --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=local
    pi = pull --rebase=interactive
	reset-clean = !git reset --hard && git clean -fd
	dsf = "!f() { [ -z \"$GIT_PREFIX\" ] || cd \"$GIT_PREFIX\" && git diff --color \"$@\" | diff-so-fancy  | less --tabs=4 -RFX; }; f"
	ls = log --stat --pretty=short --graph
	pp = !git pull && git push
[diff]
	tool = opendiff
[merge]
	tool = opendiff
[difftool]
	prompt = false
[mergetool]
	prompt = false
	keepBackup = false
[pull]
	rebase = true
